{
  "name": "@gkaframanis.ds.e/core",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Gregory Kaframanis <gkaframanis@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "commitizen": "^4.2.5",
    "cz-conventional-changelog": "^3.3.0",
    "lerna": "^5.5.2",
    "lerna-update-wizard": "^1.1.2"
  },
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*",
      "playgrounds/*"
    ],
    "nohoist": [
